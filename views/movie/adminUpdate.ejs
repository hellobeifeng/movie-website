<!DOCTYPE HTML>
<html>
<head>
    <title> <%= title %></title>
    <meta charset="utf-8"/>
    <script src="/js/jquery.js" type="text/javascript"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel='stylesheet' href='/css/theme.css'/>
    <link rel="stylesheet" href="/css/nav.css"/>
    <style>
        .form span {
            display: inline-block;
            float: left;
            width: 200px;
            text-align: right;
        }

        .right {
            float: right;
            text-align: left;
            width: 300px;
        }

        .row {
            height: 50px;
            border-bottom: 1px solid #ccc;
            line-height: 50px;
        }

        input {
            color: blue;
        }

        textarea {
            color: blue;
        }
        .form{
            border:2px solid #dfdfdf;background-color:grey;width:1008px;padding:10px auto
        }
    </style>

</head>
<body>
<div class="container">
    <% include ../common/nav%>
    <div style="clear:both"></div>
    <form class="form" action="/movie/update" method="post">
        <div class="row">
            <h2 style="text-align:center">修改电影内容</h2>
        </div>
        <div>
            <div class='row' style="display:none">
                <span>ID：</span>
                <div class='right'>
                    <input name="movie[_id]" value="<%= movie._id%>"/>
                </div>
            </div>
<!--            <div class='row'>
                <span>增加分类：</span>
                <div class='right'>
                    <input name="movie[categoryName]" value="<%= movie.categoryName %>" id='categoryName' placeholder='例如输入：战争题材'/>
                </div>
            </div>-->
            <div style="border-bottom: 1px solid #ccc;min-height: 50px;">
                <span style="line-height: 50px;">已有分类：</span>
                <div class='right'  style="min-height: 50px;">
                    <%for(var k in categories){ var cat = categories[k];%>
                    <input type="radio"
                           name="movie[category]"
                           value="<%= cat._id %>"
                           <%if( movie.category.toString() == cat._id.toString()){%>checked="checked"<%}%>
                            />&nbsp;<%= cat.name%>&nbsp;
                    <% } %>
                </div>
            </div>
            <div class='row'>
                <span>标题：</span>
                <div class='right'>
                    <input name="movie[title]" value="<%= movie.title%>"  id='inputTitle'/>
                </div>
            </div>
            <div class='row'>
                <span>导演：</span>
                <div class='right'>
                    <input name="movie[doctor]" value="<%= movie.doctor%>"  id='inputDoctor'/>
                </div>
            </div>
            <div class='row'>
                <span>国家：</span>
                <div class='right'>
                    <input name="movie[country]" value="<%= movie.country%>"  id='inputCountry'/>
                </div>
            </div>
            <div class='row'>
                <span>语种：</span>
                <div class='right'>
                    <input name="movie[language]" value="<%= movie.language%>"  id='inputLanguage'/>
                </div>
            </div>
            <div class='row'>
                <span>海报：</span>
                <div class='right'>
                    <input name="movie[poster]" value="<%= movie.poster%>"  id='inputPoster'/>
                </div>
            </div>
            <div class='row'>
                <span>年份：</span>
                <div class='right'>
                    <input name="movie[year]" value="<%= movie.year%>"  id='inputYear'/>
                </div>
            </div>
            <div class='row'>
                <span>播放地址：</span>
                <div class='right'>
                    <input name="movie[falsh]" value="<%= movie.flash%>"  id='inputFlash'/>
                </div>
            </div>
            <div style="height:200px;">
                <span style="display:inline-block;height:200px;line-height:200px;">简介：</span>
                <div class='right' >
                    <textarea name="movie[summary]" value="<%= movie.summary%>"  id='inputSummary' cols='20' rows='10'><%= movie.summary%></textarea>
                </div>
            </div>
        </div>
        <div class='row' style="text-align:center;clear:top">
            <input type="submit" value="提交" />
        </div>
    </form>
    <div style="clear:both"></div>
    <% include ../common/footer.ejs%>
</div>


</body>
</html>