<!DOCTYPE HTML>
<html>
<head>
    <title> <%= title %> </title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel='stylesheet' href='/css/theme.css'/>
    <link rel="stylesheet" href="/css/nav.css"/>
</head>
<body>
<div class="container">
    <% include ../common/nav%>
    <div style="clear:both"></div>
    <div style="height:30px;line-height:30px;float:right">
        <form action="/movie/search" method="get">
            <input type="text" name="q"/>
            <button type="submit">搜索</button>
        </form>
    </div>
    <div style="width:1010px;">
        <% if(categories.length){ %>
        <% for(var i in categories){ var cat = categories[i]; %>
          <div style="width:1010px;clear:both">
              <div style="height:50px;line-height:50px;text-align: center;border-top: 1px solid #d3d3d3;border-bottom: 1px solid #d3d3d3">
                  <a href="/movie/search?cat=<%= cat._id %>&p=0"><%= cat.name%></a>
              </div>
              <%if(cat.movies && cat.movies.length > 0){%>
                <% for(var j in cat.movies) {%>
                <% var  movie = cat.movies[j];%>
                    <%if(movie._id){%>
                        <div style="float:left;width:200px;height:200px;text-align:center;" class="allBorder">
                            <a href="/movie/detail/<%= movie._id %>">
                                <img style="width:190px;height:155px;" src="<%= movie.poster %>" alt="<%= movie.title %>"/>
                            </a>
                            <span style="display:block;font-weight: bold;height:20px;line-height:20px;"><%= movie.title %></span>
                            <a style="display:block;height:18px;line-height:18px;" href="/movie/detail/<%= movie._id %>">观看预告片</a>
                        </div>
                    <% } %>
                <% } %>
              <% } %>
          </div>
        <% } %>
        <% }else{ %>
        <p>暂无数据</p>
        <% } %>
    </div>
</div>
<div style="clear:both"></div>
<% include ../common/footer.ejs%>
</body>
<script>

</script>
</html>